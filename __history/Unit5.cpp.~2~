#include <fmx.h>
#pragma hdrstop

#include "Unit5.h"
#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TfrmAddItem *frmAddItem;
//---------------------------------------------------------------------------
__fastcall TfrmAddItem::TfrmAddItem(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TfrmAddItem::sbCalendarioClick(TObject *Sender)
{
	if (slCalendario->Visible == false) {
		slCalendario->Visible = true;
	}
	if (slCalendario->Visible == true) {
		slCalendario->Visible = false;
	}
}
//---------------------------------------------------------------------------

