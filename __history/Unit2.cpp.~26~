//---------------------------------------------------------------------------

#include <fmx.h>
#pragma hdrstop

#include "Unit2.h"
//---------------------------------------------------------------------------
#pragma package(smart_init)
#pragma resource "*.fmx"
TfrmPrincipal *frmPrincipal;
//---------------------------------------------------------------------------
__fastcall TfrmPrincipal::TfrmPrincipal(TComponent* Owner)
	: TForm(Owner)
{
}
//---------------------------------------------------------------------------
void __fastcall TfrmPrincipal::FormClose(TObject *Sender, TCloseAction &Action)
{
	Application->Terminate();
}
//---------------------------------------------------------------------------


void __fastcall TfrmPrincipal::tbVerticalTracking(TObject *Sender)
{
	tmRedefine->Enabled = true;
}
//---------------------------------------------------------------------------
void __fastcall TfrmPrincipal::tmRedefineTimer(TObject *Sender)
{
		Rectangle1->Position->Y = tbVertical->Value;
}
//---------------------------------------------------------------------------

void __fastcall TfrmPrincipal::tbVerticalMouseUp(TObject *Sender, TMouseButton Button,
          TShiftState Shift, float X, float Y)
{
	tmRedefine->Enabled = false;
}
//---------------------------------------------------------------------------

void __fastcall TfrmPrincipal::tmVerificaTimer(TObject *Sender)
{
	tbVertical->Max = frmPrincipal->Height;
	tbVertical->Value = Rectangle1->Position->Y;
	tmVerifica->Enabled = false;
}
//---------------------------------------------------------------------------

void __fastcall TfrmPrincipal::FormResize(TObject *Sender)
{
	tmVerifica->Enabled = true;
}
//---------------------------------------------------------------------------

